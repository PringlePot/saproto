{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "allowJs": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "types": ["vite/client", "@/models/*", "@/types/*"],
    "paths": {
      "@/*": ["./resources/js/*"]
    }
  },
  "include": ["resources/js/**/*.ts", "resources/js/**/*.d.ts", "resources/js/**/*.vue"]
}